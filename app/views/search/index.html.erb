<div class='container landing-container'>
  <div class='columns is-mobile box search-box'>
    <div class='column is-paddingless'>
      <form class='search-block'>
        <label class='search-label label'>
          <span>CodeSearcherFinderBox</span>
        </label> 
        <%= form_tag('search/index', :method => "get") do %>
        <%= search_field_tag :search, params[:search], placeholder: "search", class: 'search-block'  %>
      
    </div>
    <div class='column is-2 is-paddingless'>

      <%= button_tag "Search", class: 'button is-primary is-large search-button' %>
      <% end %>
      </form>
    </div>
  </div>
</div>
  